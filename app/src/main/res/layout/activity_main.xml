
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:id="@+id/appBarLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize" />

            </com.google.android.material.appbar.AppBarLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ImageLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"

            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp">

            <ImageView
                android:id="@+id/photoImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/no_picture"
                android:adjustViewBounds="true"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutToBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp">

            <LinearLayout
                android:id="@+id/upLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"

                    android:background="@drawable/horizontal_scrollview_border">

                    <EditText
                        android:id="@+id/commentEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="71dp"
                        android:hint="Enter your comment..."
                        android:inputType="text"/>

                </HorizontalScrollView>

                <Button
                    android:id="@+id/button_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_weight="0"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@android:drawable/ic_menu_camera"
                    android:gravity="center_vertical|center_horizontal" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/downLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/sendToServerButton"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="0.6"
                    android:text="Send" />

                <Spinner
                    android:id="@+id/projectSpinner"
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="48dp"
                    android:dropDownWidth="match_parent"
                    android:popupBackground="@color/white"
                    android:spinnerDropDownItemStyle="@style/SpinnerDropDownStyle"
                    android:spinnerMode="dialog" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
