<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#D1CCCC"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#D8E1FA">

            <TextView
                android:id="@+id/instrNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"

                android:hint="Instrument name"

                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/instrPropsTextView"
                app:layout_constraintEnd_toStartOf="@+id/instrUnitsTextView"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/instrUnitsTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"

                android:hint="Units"

                android:textSize="20dp"

                app:layout_constraintBottom_toBottomOf="@+id/instrNameTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

<!--            <TextView-->
<!--                android:id="@+id/instrAmountTextView"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="wrap_content"-->

<!--                android:layout_marginEnd="10dp"-->

<!--                android:hint="13"-->

<!--                android:textSize="20dp"-->
<!--                app:layout_constraintBottom_toBottomOf="@+id/instrPropsTextView"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintTop_toTopOf="@+id/instrPropsTextView" />-->

            <View
                android:id="@+id/view"
                style="@style/Divider"
                android:layout_width="0dp"
                app:layout_constraintBottom_toTopOf="@id/instrPropsTextView"
                app:layout_constraintEnd_toEndOf="@id/instrNameTextView"
                app:layout_constraintStart_toStartOf="@id/instrNameTextView"
                app:layout_constraintTop_toBottomOf="@id/instrNameTextView" />

            <TextView
                android:id="@+id/instrPropsTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"

                android:hint="Instrument properties"

                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/addInstrumentToCartButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/instrNameTextView" />

            <ImageView
                android:id="@+id/deleteInstrumentButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:src="@drawable/baseline_delete_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/addInstrumentToCartButton"
                app:layout_constraintTop_toTopOf="@+id/addInstrumentToCartButton"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/addInstrumentToCartButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:src="@drawable/baseline_add_shopping_cart_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/deleteInstrumentButton"
                app:layout_constraintTop_toBottomOf="@id/instrPropsTextView"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>